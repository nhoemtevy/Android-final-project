<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Welcome to Noreah Booking"
        android:textColor="#3F51B5"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewWelcome"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#92BBF8">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="120dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/homeimg1" />

        <TextView
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Enjoy Your Life With Your Partner"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#92BBF8">

        <ImageView
            android:layout_width="97dp"
            android:layout_height="106dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/hotelimg2new" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Make The Best Memories With Your Best Friends"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#92BBF8">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="86dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/homeimg3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Make Good Time With Family"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonViewHotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_view"
        android:text="Get Start"
        android:textColor="#FFFFFF"
        android:textSize="10dp" />

</RelativeLayout>
